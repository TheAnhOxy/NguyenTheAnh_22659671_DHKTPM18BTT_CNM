<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Quản lý sản phẩm Local</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-light p-5">
    <div class="container bg-white p-4 rounded shadow-sm">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">Danh sách sản phẩm</h2>
            <a href="/add" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Thêm mới</a>
        </div>

        <!-- Form tìm kiếm -->
        <div class="mb-4">
            <form action="/search" method="GET" class="d-flex gap-2">
                <input 
                    type="text" 
                    name="q" 
                    class="form-control" 
                    placeholder="Tìm kiếm sản phẩm theo tên..." 
                    value="<%= searchQuery || '' %>"
                    required
                />
                <button type="submit" class="btn btn-info"><i class="bi bi-search"></i> Tìm kiếm</button>
                <% if (searchQuery) { %>
                    <a href="/" class="btn btn-secondary"><i class="bi bi-x-lg"></i> Xóa</a>
                <% } %>
            </form>
            <% if (searchQuery) { %>
                <small class="text-muted mt-2 d-block">Kết quả tìm kiếm cho: <strong>"<%= searchQuery %>"</strong></small>
            <% } %>
        </div>

        <% if (products && products.length > 0) { %>
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Sản phẩm</th>
                        <th>Giá bán</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(p => { %>
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="<%= p.url_image %>" class="rounded me-3" style="width:60px; height:60px; object-fit:cover;" onerror="this.src='/images/placeholder.png'">
                                <div>
                                    <div class="fw-bold"><%= p.name %></div>
                                    <small class="text-muted">ID: <%= p.id.substring(0,8) %></small>
                                </div>
                            </div>
                        </td>
                        <td class="text-primary fw-bold"><%= p.price.toLocaleString() %> đ</td>
                        <td class="text-end">
                            <a href="/edit/<%= p.id %>" class="btn btn-outline-warning btn-sm"><i class="bi bi-pencil"></i> Sửa</a>
                            <form action="/delete/<%= p.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Bạn chắc chắn muốn xóa?')">
                                <button class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i> Xóa</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i> Chưa có sản phẩm. <a href="/add">Thêm sản phẩm mới</a>
            </div>
        <% } %>
    </div>
</body>
</html>